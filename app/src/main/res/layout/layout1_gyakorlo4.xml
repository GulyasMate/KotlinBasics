<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#e0f7fa"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/cameraImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_menu_camera"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/nameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="#0354F6"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/cameraImage"
        android:layout_alignTop="@id/cameraImage"
        android:layout_marginBottom="5dp" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:layout_marginStart="10dp"
        android:layout_below="@id/nameLabel"
        android:layout_toEndOf="@id/cameraImage"
        android:background="@android:drawable/edit_text"/>

    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameInput"

        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:text="Address:"
        android:textColor="#0354F6"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/addressInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your address"
        android:layout_below="@id/addressLabel"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/edit_text"/>

    <TextView
        android:id="@+id/phoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textColor="#0354F6"
        android:textStyle="bold"
        android:layout_below="@id/addressInput"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/phoneInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your phone"
        android:layout_below="@id/phoneLabel"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/edit_text"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:layout_below="@id/phoneInput"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:backgroundTint="#FF0505"
        android:textColor="#FFFF"
        android:layout_toEndOf="@id/saveButton"
        android:layout_alignTop="@id/saveButton"
        android:layout_marginStart="20dp" />

</RelativeLayout>

